##### SPACE SWITCHER
alt - 1 : yabai -m space --focus 2
alt - 2 : yabai -m space --focus 3 || yabai -m window --focus stack.next || yabai -m window --focus stack.first
alt - 3 : yabai -m space --focus 4 || yabai -m window --focus stack.next || yabai -m window --focus stack.first
alt - 4 : yabai -m space --focus 5
alt - 5 : yabai -m space --focus 6
alt - 6 : yabai -m space --focus 7
alt - 7 : yabai -m space --focus 8
alt - 8 : yabai -m space --focus 9
alt - 9 : yabai -m space --focus 10

##### Move to space
hyper - 1 : yabai -m window --space 2 && yabai -m space --focus 2
hyper - 2 : yabai -m window --space 3 && yabai -m space --focus 3
hyper - 3 : yabai -m window --space 4 && yabai -m space --focus 4
hyper - 4 : yabai -m window --space 5 && yabai -m space --focus 5
hyper - 5 : yabai -m window --space 6 && yabai -m space --focus 6
hyper - 6 : yabai -m window --space 7 && yabai -m space --focus 7
hyper - 7 : yabai -m window --space 8 && yabai -m space --focus 8
hyper - 8 : yabai -m window --space 9 && yabai -m space --focus 9
hyper - 9 : yabai -m window --space 10 && yabai -m space --focus 10
hyper - 0 : yabai -m window --space 11 && yabai -m space --focus 11

# create desktop i hope this works
hyper - c : yabai -m space --create
# Delete focused space and focus first space on display
hyper - x : yabai -m space --focus prev && yabai -m space recent --destroy

