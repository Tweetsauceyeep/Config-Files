#SKHD STUFF
# LAYOUT
cmd + alt - o : yabai -m space --layout bsp
cmd + alt - p : yabai -m space --layout stack



# opening apps
cmd - return : /Applications/Alacritty.app/Contents/MacOS/alacritty     # open a terminal
ctrl - return : $HOME/.config/scripts/scratchpad.sh
cmd + alt - e : /Applications/Alacritty.app/Contents/MacOS/alacritty -e lf
cmd + alt - a : open $HOME/Wallpapers
cmd + alt - m : /Applications/Alacritty.app/Contents/MacOS/alacritty -e spt
cmd + alt - s : open $HOME/pictures/screenshots
cmd + ctrl - p : open $HOME/.config/math/latexcheatsheet.pdf
hyper - w : open -a "Brave Browser"

