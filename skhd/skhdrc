hyper - s : $HOME/.config/scripts/todo

### Yabai stuff ###
alt - b : yabai -m space --balance
cmd + alt - b : yabai -m window --toggle border                                                            # toggle border for the focused window
cmd + alt - f : yabai -m window --toggle native-fullscreen                                                   # Toggle parent zoom
cmd + alt - y : yabai -m window --toggle float; yabai --trigger window_focus 
#cmd + alt - x : yabai -m config top_padding 0 && yabai -m config bottom_padding 0 && yabai -m config left_padding 0 && yabai -m config right_padding 0; yabai -m config window_gap 0
cmd + alt - x : yabai -m space --toggle padding; yabai -m space --toggle gap
cmd + alt - t : yabai -m config top_padding 20; yabai -m config bottom_padding 20; yabai -m config left_padding 20; yabai -m config right_padding 20; yabai -m config window_gap 10
cmd + alt - r : yabai -m config top_padding 60; yabai -m config bottom_padding 60; yabai -m config left_padding 60; yabai -m config right_padding 60; yabai -m config window_gap 10
