#SKHD STUFF

# opening apps
cmd - return : /Applications/Alacritty.app/Contents/MacOS/alacritty     # open a terminal
cmd + alt - e : /Applications/Alacritty.app/Contents/MacOS/alacritty -e lf                                                # open finder
cmd + alt - o : open -a obsidian
cmd + alt - a : open $HOME/Wallpapers
cmd + alt - s : /Applications/Alacritty.app/Contents/MacOS/alacritty -e spt                                                # open finder
cmd + ctrl - p : open $HOME/.config/math/latexcheatsheet.pdf
hyper - w : open -a "Brave Browser"

# DMENU
#ctrl - b : ~/.config/scripts/popup.sh .config/scripts/bookmarks.sh
ctrl - b : ~/.config/scripts/bookmarks.sh
ctrl - m : ~/.config/scripts/applauncher.sh
cmd + alt - v : ~/.config/scripts/addBookmarks.sh
cmd + alt - w : ~/.config/scripts/changewallpaper.sh
cmd + alt - n :  ~/.config/scripts/pdf-launcher.sh
cmd + alt - c : /Applications/Alacritty.app/Contents/MacOS/alacritty -e $HOME/.config/scripts/notetaking.sh
cmd + alt - return : $HOME/.config/scripts/confedit.sh
cmd + alt - m : $HOME/.config/scripts/popup.sh $HOME/.config/scripts/dmenuemojis.sh

### Yabai stuff ###
cmd + alt - b : yabai -m window --toggle border                                                            # toggle border for the focused window
cmd + alt - f : yabai -m window --toggle native-fullscreen                                                   # Toggle parent zoom
cmd + alt - t : yabai -m window --toggle float; sketchybar --trigger window_focus                                # Float/unfloat the focused window
cmd + alt - t : yabai -m window --toggle float; yabai --trigger window_focus 
cmd + alt - x : yabai -m config top_padding 0 && yabai -m config bottom_padding 35 && yabai -m config left_padding 0 && yabai -m config right_padding 0; yabai -m config window_gap 1
cmd + alt - z : yabai -m config top_padding 20; yabai -m config bottom_padding 60; yabai -m config left_padding 60; yabai -m config right_padding 60; yabai -m config window_gap 20
### Movement ###
cmd + alt - h : yabai -m window --move rel:-30:0
cmd + alt - j : yabai -m window --move rel:0:30
cmd + alt - k : yabai -m window --move rel:0:-30
cmd + alt - l : yabai -m window --move rel:30:0
### NOT USING ###
#cmd + alt - p : yabai -m config top_padding               10
#cmd + alt - u : yabai -m config top_padding               45
#cmd + alt - r : yabai -m window --resize abs:750:600



# if you're having troubles finding key codes for a key just type skhd --observe in a terminal and type a key. Pretty cool! Or just check the wiki.
hyper - t : yabai -m config active_window_opacity        1.0
hyper - y : yabai -m config active_window_opacity        0.9



# move window to previous or next space
hyper - n : yabai -m window --space next && yabai -m space --focus next
hyper - b : yabai -m window --space prev && yabai -m space --focus prev

hyper - s : yabai -m space --focus prev
hyper - d: yabai -m space --focus next
# Move window to previous or next space - AND FOCUS ON IT
# yabai -m window --space next

##### SPACE SWITCHER
hyper - 1 : yabai -m space --focus 2
hyper - 2 : yabai -m space --focus 3
hyper - 3 : yabai -m space --focus 4
hyper - 4 : yabai -m space --focus 5
hyper - 5 : yabai -m space --focus 6
hyper - 6 : yabai -m space --focus 7

# create desktop i hope this works
hyper - c : yabai -m space --create
# Delete focused space and focus first space on display
hyper - x : yabai -m space --destroy

# Focus next window:
hyper - k : yabai -m window --focus next
hyper - j : yabai -m window --focus prev

# Focus next on stack

## swap window
#hyper - y : yabai -m window --swap west
shift + alt - j : yabai -m window --swap west
shift + alt - k : yabai -m window --swap east
hyper - 0x21 : yabai -m window --swap east # 0x21 is the "[" key

## increase window size
hyper - g : yabai -m window --resize left:-20:0
#shift + alt - s : yabai -m window --resize bottom:0:20
#shift + alt - w : yabai -m window --resize top:0:-20
#shift + alt - d : yabai -m window --resize right:20:0

## decrease window size
hyper - h : yabai -m window --resize left:20:0
#shift + cmd - s : yabai -m window --resize bottom:0:-20
#shift + cmd - w : yabai -m window --resize top:0:20
shift + cmd - d : yabai -m window --resize right:-20:0


## rotate tree 90
hyper - r : yabai -m space --rotate 90

## toggle window fullscreen zoom
hyper - p : yabai -m window --toggle zoom-fullscreen
