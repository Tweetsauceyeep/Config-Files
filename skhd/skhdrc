hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east


alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
# Focus next on stack

## swap window
#hyper - y : yabai -m window --swap west
shift + alt - j : yabai -m window --swap west
shift + alt - k : yabai -m window --swap east
hyper - 0x21 : yabai -m window --swap east # 0x21 is the "[" key

# Resizing windows
hyper - u : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
hyper - i : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20
hyper - o : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
hyper - p : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0



## rotate tree 90
hyper - r : yabai -m space --rotate 90

## toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# set insertion point in focused container
# bro what does this even mean
ctrl + alt - h : yabai -m window --insert west
ctrl + alt - j : yabai -m window --insert south
ctrl + alt - k : yabai -m window --insert north
ctrl + alt - l : yabai -m window --insert east
ctrl + alt - i : yabai -m window --insert stack

#stacks
## Stacks (shift + ctrl - ...)
#151515 Add the active window to the window or stack to the {direction}: shift + ctrl - {j, k, l, รถ}
shift + alt - h    : yabai -m window  west --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
shift + alt - j    : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
shift + alt - k    : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
shift + alt - l : yabai -m window  east --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus

# Stack Navigation: shift + ctrl - {n, p}
alt - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first
alt - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.last

# focus the next stacked window if possible; otherwise focus the next window or go back to the first window
alt - tab : yabai -m window --focus stack.next || yabai -m window --focus stack.first  

### Warping
cmd + alt - h : yabai -m window --swap west
cmd + alt - j : yabai -m window --swap south
cmd + alt - k : yabai -m window --swap north
cmd + alt - l : yabai -m window --swap east


