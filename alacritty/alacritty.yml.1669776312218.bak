env:
  TERM: xterm-256color
window:
  decorations: buttonless
  #opacity: 1
  opacity: 0.75
  padding:
    x: 5
    y: 15
  class:
    instance: Alacritty
    general: Alacritty
  scrolling:
    history: 5000

scrolling:
  history: 10000
  multiplier: 3

font:
  normal:
    #family: CozetteVector
    #style: Regular
    family: CaskaydiaCove Nerd Font
    style: Regular
  #size: 19
  size: 22
  bold:
    family: CaskaydiaCove Nerd Font
    style: Bold
  italic:
    family: CaskaydiaCove Nerd Font
    style: Light Italic

## Nord ###
colors:
  name: 3024 (dark)
  author: Chris Kempson
  primary:
    background: "#090300"
    foreground: "#a5a2a2"
  cursor:
    text: "#090300"
    cursor: "#a5a2a2"
  normal:
    black: "#090300"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#a5a2a2"
  bright:
    black: "#5c5855"
    red: "#db2d20"
    green: "#01a252"
    yellow: "#fded02"
    blue: "#01a0e4"
    magenta: "#a16a94"
    cyan: "#b5e4f4"
    white: "#f7f7f7"

key_bindings:
  - { key: N, mods: Command, action: SpawnNewInstance }
theme: 3024.dark
