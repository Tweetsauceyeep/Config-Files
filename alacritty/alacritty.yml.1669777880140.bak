env:
  TERM: xterm-256color
window:
  decorations: buttonless
  #opacity: 1
  opacity: 0.75
  padding:
    x: 5
    y: 15
  class:
    instance: Alacritty
    general: Alacritty
  scrolling:
    history: 5000

scrolling:
  history: 10000
  multiplier: 3

font:
  normal:
    #family: CozetteVector
    #style: Regular
    family: CaskaydiaCove Nerd Font
    style: Regular
  #size: 19
  size: 22
  bold:
    family: CaskaydiaCove Nerd Font
    style: Bold
  italic:
    family: CaskaydiaCove Nerd Font
    style: Light Italic

## Nord ###
colors:
  # Default colors
  primary:
    # hard contrast: background = '#f9f5d7'
    background: '#fbf1c7'
    # soft contrast: background = '#f2e5bc'
    foreground: '#3c3836'

  # Normal colors
  normal:
    black: '#fbf1c7'
    red: '#cc241d'
    green: '#98971a'
    yellow: '#d79921'
    blue: '#458588'
    magenta: '#b16286'
    cyan: '#689d6a'
    white: '#7c6f64'

  # Bright colors
  bright:
    black: '#928374'
    red: '#9d0006'
    green: '#79740e'
    yellow: '#b57614'
    blue: '#076678'
    magenta: '#8f3f71'
    cyan: '#427b58'
    white: '#3c3836'

key_bindings:
  - { key: N, mods: Command, action: SpawnNewInstance }
theme: Gruvbox-Light
