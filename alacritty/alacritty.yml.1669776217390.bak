env:
  TERM: xterm-256color
window:
  decorations: buttonless
  #opacity: 1
  opacity: 0.75
  padding:
    x: 5
    y: 15
  class:
    instance: Alacritty
    general: Alacritty
  scrolling:
    history: 5000

scrolling:
  history: 10000
  multiplier: 3

font:
  normal:
    #family: CozetteVector
    #style: Regular
    family: CaskaydiaCove Nerd Font
    style: Regular
  #size: 19
  size: 22
  bold:
    family: CaskaydiaCove Nerd Font
    style: Bold
  italic:
    family: CaskaydiaCove Nerd Font
    style: Light Italic

## Nord ###
colors:
  name: Erebus
  author: ""
  primary:
    background: "#000000"
    foreground: "#ffffff"
  cursor:
    text: "#000000"
    cursor: "#ffffff"
  normal:
    black: "#757575"
    red: "#ff5f5f"
    green: "#de8a36"
    yellow: "#d78787"
    blue: "#af5fd7"
    magenta: "#ff87d7"
    cyan: "#dea3e5"
    white: "#b8b8b8"
  bright:
    black: "#b8b8b8"
    red: "#d78787"
    green: "#ff9f6f"
    yellow: "#ff5f5f"
    blue: "#dea3e5"
    magenta: "#d7afaf"
    cyan: "#af5fd7"
    white: "#757575"

key_bindings:
  - { key: N, mods: Command, action: SpawnNewInstance }
theme: Erebus
